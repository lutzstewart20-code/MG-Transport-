rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Users can upload files to their own folder
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Receipts and documents: users can upload, admins can read all
    match /receipts/{receiptId} {
      allow read: if request.auth != null &&
        (request.auth.uid == resource.metadata.user_id || request.auth.token.role == 'admin');
      allow write: if request.auth != null;
    }
    
    // Vehicle images: readable by all authenticated users, writable by admins
    match /vehicles/{vehicleId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.role == 'admin';
    }
    
    // Profile photos: users can manage their own
    match /profiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
